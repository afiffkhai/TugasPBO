class Mobil:
    def __init__(self, merek, model, tahun, warna):
        self.merek = merek
        self.model = model
        self.tahun = tahun
        self.warna = warna

    def info(self):
        print("Ini adalah mobil", self.merek, self.model, "tahun", self.tahun, "dengan warna", self.warna)

mobil1 = Mobil("Lamborgini", "Aventador", 2011, "Hitam")
mobil2 = Mobil("Honda", "S2000", 2000, "Putih")

mobil1.info() # "Ini adalah mobil Lamborgini Aventador tahun 2011 dengan warna Hitam"
mobil2.info() # "Ini adalah mobil Honda S2000 tahun 2000 dengan warna Putih"
